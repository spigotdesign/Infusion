{
    "name"       : "spigot/infusion",
    "description": "A starter theme from Spigot. Uses Hybrid Core",
    "keywords"   : ["wordpress", "hybrid-core"],
    "type"       : "wordpress-theme",
    "homepage"   : "http://spigotdesign.com/",
    "license"    : "GPL-2.0+",
    "authors"    : [
        {
            "name"    : "Bryan Hoffman",
            "email"   : "bryan@spigotdesign.com",
            "homepage": "http://spigotdesign.com/"
        }
    ],
    "require" : {
        "composer/installers" : "~1.0",
        "justintadlock/hybrid-core": "dev-dev"
    },

    "extra" : {
        "installer-paths" : {
            "hybrid-core/{$name}/": ["type:library"]
        }
    }
}

